<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/vakken_detail_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="nl.antonsteenvoorden.ikpmd.activity.VakkenActivity">


    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:fitsSystemWindows="true">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleMarginStart="48dp"
            app:expandedTitleMarginEnd="64dp">

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_collapseMode="pin"
                    app:popupTheme="@style/AppTheme.PopupOverlay">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/vakken_detail_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="Modulenaam"
                            android:inputType="text"
                            android:singleLine="false"
                            android:textSize="34sp"
                            android:textColor="@color/white"
                            android:layout_centerVertical="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"/>

                        <EditText
                            android:id="@+id/vakken_detail_grade"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_column="1"
                            android:layout_columnSpan="2"
                            android:layout_row="0"
                            android:background="@drawable/circle"
                            android:gravity="center"
                            android:hint="cijfer"
                            android:inputType="numberDecimal"
                            android:textColor="@color/colorPrimary"
                            android:textSize="35sp"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"/>
                    </RelativeLayout>

                </android.support.v7.widget.Toolbar>
        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="nl.antonsteenvoorden.ikpmd.activity.ScrollingActivity"
        tools:showIn="@layout/activity_vakken">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp">

            <TextView
                android:layout_column="0"
                android:layout_row="0"
                android:text="Omschrijving"/>

            <EditText
                android:id="@+id/vakken_detail_omschrijving"
                android:layout_column="1"
                android:layout_row="0"
                android:hint="Omschrijving"
                android:textColor="@color/colorPrimary"/>

            <TextView
                android:layout_column="0"
                android:layout_row="1"
                android:text="Toetsdatum"
                />

            <EditText
                android:id="@+id/vakken_detail_toetsdatum"
                android:layout_column="1"
                android:layout_row="1"
                android:hint="Toetsdatum"
                android:textColor="@color/colorPrimary"
                />

            <TextView
                android:layout_column="0"
                android:layout_row="2"
                android:text="Mutatiedatum"
                />

            <EditText
                android:id="@+id/vakken_detail_mutatiedatum"
                android:layout_column="1"
                android:layout_row="2"
                android:hint="Mutatiedatum"
                android:textColor="@color/colorPrimary"
                />

            <TextView
                android:layout_column="0"
                android:layout_row="3"
                android:text="Toetstype"
                />

            <EditText
                android:id="@+id/vakken_detail_toetstype"
                android:layout_column="1"
                android:layout_row="3"
                android:hint="Toetstype"
                android:textColor="@color/colorPrimary"
                />

            <TextView
                android:layout_column="0"
                android:layout_row="4"
                android:text="Aantal ECTS"
                />

            <EditText
                android:id="@+id/vakken_detail_ects"
                android:layout_column="1"
                android:layout_row="4"
                android:hint="ECTS"
                android:textColor="@color/colorPrimary"
                android:inputType="number"/>

            <TextView
                android:layout_column="0"
                android:layout_row="5"
                android:text="Periode"
                />

            <Spinner
                android:id="@+id/vakken_detail_period"
                android:layout_column="1"
                android:layout_row="5"
                android:hint="Periode"
                android:textColor="@color/colorPrimary"
                android:inputType="number"/>

            <TextView
                android:layout_column="0"
                android:layout_row="6"
                android:text="Jaar"
                />

            <Spinner
                android:id="@+id/vakken_detail_jaar"
                android:layout_column="1"
                android:layout_row="6"
                android:hint="Jaar"
                android:textColor="@color/colorPrimary"
                android:inputType="number"/>

            <TextView
                android:layout_column="0"
                android:layout_row="7"
                android:text="Definitief"
                />

            <EditText
                android:id="@+id/vakken_detail_definitief"
                android:layout_column="1"
                android:layout_row="7"
                android:hint="Definitief"
                android:textColor="@color/colorPrimary"
                />

            <Button
                android:id="@+id/vakken_detail_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_row="8"
                android:background="@color/colorAccent"
                android:text="@string/vakken_detail_button"
                android:textColor="@color/colorPrimary"/>
        </GridLayout>

    </android.support.v4.widget.NestedScrollView>
